<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @purchase) do |f| %>
        <div class="mb-3">
          商品名
          <%= f.text_area :item, class: 'form-control', rows: 1 %>
          <p></p>
          URL
          <%= f.text_area :url, class: 'form-control', rows: 2 %>
        </div>
        <%= f.submit '登録', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'purchases/purchases', purchases: all_item %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Shopping List</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>