<% if users.any? %>
  <div>
    <p><font size="7"><%= current_user.family_name %>  家のユーザ一覧</font></p>
  </div>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="mb-3 d-flex">
        <% if current_user.family_name == user.family_name %>
          <img class="rounded me-2" src="<%= gravatar_url(user, { size: 64 }) %>" alt="">
          <div>
            <div>
              <%= user.name %>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>